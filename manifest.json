{
  "name": "My Extensions",
  "version": "0.9.5.6",
  "description": "Are you an extensions developer? Keep track of your Chrome extensions. Be notified for new reviews, ratings and more!",
  "background": {
    "scripts": [
      "js/core-lite.js",
      "js/js.js",
      "js/background.js"
    ]
  },
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icons/19.png",
    "default_title": "My Extensions",
    "default_popup": "popup.html"
  },

  "icons": {
    "19": "icons/19.png",
    "32": "icons/32.png",
    "48": "icons/48.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "notifications",
    "https://chrome.google.com/*",
    "http://chrome.dev.pathfinder.gr/*",
    "http://chrome.pathfinder.gr/*",
    "https://clients2.google.com/*"
  ],

  "manifest_version": 2,
  "minimum_chrome_version": "18"
}